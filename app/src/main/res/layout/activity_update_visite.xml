<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    tools:context=".screens.AddVisite"
    >


    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="0dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="48dp"
        android:layout_marginBottom="48dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="30sp"
        android:layout_marginRight="30sp">

        <TextView
            android:id="@+id/updatecollaborator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_input_form"
            android:padding="12dp" />

        <!--android:entries="@array/team"-->

        <TextView
            android:id="@+id/updatedatevisite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/bg_input_form"
            android:clickable="true"
            android:ems="10"
            android:focusable="true"
            android:hint="@string/date"
            android:padding="12dp" />

        <TextView
            android:id="@+id/validatorDateVisite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Validatordate"
            android:textColor="@color/red"
            android:visibility="gone" />


        <Spinner
            android:id="@+id/updatetypevisite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:background="@drawable/bg_input_form"
            android:entries="@array/type_visite"
            android:padding="12dp" />

        <RatingBar
            android:id="@+id/updatenotevisite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:numStars="3" />

        <EditText
            android:id="@+id/updatecommentairevisite"
            android:layout_width="match_parent"
            android:layout_height="116dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/bg_input_form"
            android:ems="10"
            android:gravity="start|top"
            android:hint="Commentaire"
            android:inputType="textMultiLine"
            android:paddingLeft="8dp"
            android:paddingTop="8dp" />

        <TextView
            android:id="@+id/validatorVisite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Validator"
            android:textColor="@color/red"
            android:visibility="gone" />
    </LinearLayout>


    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/updateVisit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:clickable="true"
        android:elevation="2dp"
        android:focusable="true"
        android:src="@drawable/ic_done_black_24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</android.support.constraint.ConstraintLayout>