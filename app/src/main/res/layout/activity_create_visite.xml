<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screens.CreateVisite">


    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="32dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Spinner
            android:id="@+id/collab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_input_form"
            android:entries="@array/team"
            android:padding="12dp" />

        <EditText
            android:id="@+id/date_visite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/bg_input_form"
            android:ems="10"
            android:inputType="none"
            android:padding="12dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:clickable="true"/>

        <Spinner
            android:id="@+id/type_visite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_input_form"
            android:entries="@array/type_visite"
            android:padding="12dp"
            android:layout_marginBottom="12dp"/>

        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="3"
            android:layout_gravity="center"/>

        <EditText
            android:id="@+id/commentaire"
            android:layout_width="match_parent"
            android:layout_height="116dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/bg_input_form"
            android:gravity="start|top"
            android:paddingTop="8dp"
            android:paddingLeft="8dp"
            android:ems="10"
            android:inputType="textMultiLine"/>


    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/save_visite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:clickable="true"
        android:elevation="2dp"
        android:focusable="true"
        android:src="@drawable/ic_done_black_24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</android.support.constraint.ConstraintLayout>